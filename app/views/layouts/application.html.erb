<!DOCTYPE html>
<html>
  <head>
    <title>CamefigApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.9.0/css/all.css"> 
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-md navbar-expand-xs navbar-expend-lg navbar-dark bg-black">
        <div class="container col-10">
            <h1><%=link_to 'Camefig', root_path, class: 'text-decoration-none' %></h1>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#grobalNav" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="col-md-3 clearfix">
            <div class = "float-right">
              <div id="grobalNav" class="collapse navbar-collapse float-right">
                <ul class="navbar-nav ml-auto pull-right">
                  <% if user_signed_in? %>
                    <li class="nav-item pl-4 active">
                      <a href="#" class="nav-link text-center">HOME</a>
                    </li>
                    <li class="nav-item pl-4">
                      <a class="btn btn-primary" data-toggle="modal" data-target="#testModal">Upload</a>
                    </li>
                    <li class="nav-item pl-4">
                      <a href="#" class="nav-link text-center">BLOG</a>
                    </li>
                    <li class="nav-item pl-4">
                      <a href="#" class="nav-link text-center">CONTACT</a>
                    </li>
                    <% else %>
                    <li class="nav-item pl-4">
                      <%= link_to "Login", new_user_session_path, class: "nav-link" %>
                    </li>
                    <li class="nav-item pl-4">
                      <%=link_to "Sign Up", new_user_registration_path ,class: "nav-link text-center"%>
                    </li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
